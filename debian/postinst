#!/bin/sh
# postinst script for ChineseChess
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        if [ ! -f /usr/share/applications/ChineseChess.desktop ]; then
            ln -s /opt/ChineseChess/share/applications/ChineseChess.desktop /usr/share/applications/ChineseChess.desktop
        fi
        if [ ! -d ~/.config/autostart ]; then
            mkdir -p ~/.config/autostart
        fi
        if [ ! -f  ~/.config/autostart/ChineseChess.desktop ]; then
            chmod a+wr ~/.config/autostart
            ln -s /opt/ChineseChess/share/applications/ChineseChess.desktop ~/.config/autostart/ChineseChess.desktop
        fi
        if [ ! -f /usr/share/pixmaps/ChineseChess.png ]; then
            if [ ! -d /usr/share/pixmaps ]; then
                mkdir -p /usr/share/pixmaps
            fi
            ln -s /opt/ChineseChess/share/pixmaps/ChineseChess.png /usr/share/pixmaps/ChineseChess.png
        fi
        echo "/opt/ChineseChess/lib" > /etc/ld.so.conf.d/ChineseChess.conf
        echo "/opt/ChineseChess/bin" >> /etc/ld.so.conf.d/ChineseChess.conf
        export QT_VERSION_DIR=
        if [ -n "${QT_VERSION_DIR}" ]; then
            echo "/opt/qt${QT_VERSION_DIR}/lib" >> /etc/ld.so.conf.d/FaceRecognizer.conf
        fi
        ldconfig
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -fr ~/.config/autostart/ChineseChess.desktop
        rm -fr /usr/share/applications/ChineseChess.desktop
        rm -fr /etc/ld.so.conf.d/ChineseChess.conf
        rm -fr /usr/share/pixmaps/ChineseChess.png
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
